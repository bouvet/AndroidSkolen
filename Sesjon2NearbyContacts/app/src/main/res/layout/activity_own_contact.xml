<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    tools:context="no.bouvet.androidskolen.nearbycontacts.OwnContactActivity">

    <!-- Alterativer inkl. Layout med TextView (label) + EditText og TextInputLayout + TextInputEditText, fra "design"-supportlibrary -->
    <EditText
        android:id="@+id/own_contact_name"
        android:hint="Name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/own_contact_email"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/own_contact_phone"
        android:hint="Phonenumber"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Publish"
        android:id="@+id/own_contact_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
